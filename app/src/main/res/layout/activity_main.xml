<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    app:backgroundTint="#ECE2E2"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="325dp"
        android:layout_height="32dp"
        android:text="Datadog RUM Sample Android App"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/img_Intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="408dp"
        android:gravity="center"
        android:src="@drawable/datadog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/transfer"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:layout_marginBottom="328dp"
        android:background="@color/white"
        android:gravity="center"
        android:minWidth="200dp"
        android:text="Send HTTP API Request"
        android:textColor="@color/black"
        app:backgroundTint="#ECE2E2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:minWidth="200dp"
        android:text="Add performance timing"
        android:textColor="@color/black"
        app:backgroundTint="#ECE2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/transfer" />


</androidx.constraintlayout.widget.ConstraintLayout>